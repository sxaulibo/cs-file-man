<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserMapper">

    <resultMap id="libo" type="UserInfo">
        <result property="name" column="file_name"/>
        <result property="password" column="file_password"/>
        <result property="rootFid" column="file_rootfid"/>
        <result property="token" column="file_token"/>
    </resultMap>
    <insert id="insertFile" parameterType="FileInfo">
            INSERT INTO fileInfo_tbl (fileInfo_fileCode,fileInfo_fileName,fileInfo_path)
            VALUES (#{fileCode},#{fileName},#{path})
        </insert>


    <select id="queryUserInfoByName" parameterType="String" resultType="libo">
             SELECT *
             FROM runoob_tbl WHERE file_name = #{name}
        </select>
    <select id="queryUserIdByToken" parameterType="String">
             SELECT USER_ID
             FROM USERID_TOKEN WHERE TOKEN = #{TOKEN}
        </select>
    <select id="queryUserInfoByUserId" parameterType="String">
             SELECT USER_ID
             FROM USERID_TOKEN WHERE TOKEN = #{TOKEN}
        </select>
    <select id="queryFileIdByUserId" parameterType="String">
             SELECT USER_ID
             FROM USERID_TOKEN WHERE TOKEN = #{TOKEN}
        </select>
    <select id="queryTokenByUserId" parameterType="String">
             SELECT USER_ID
             FROM USERID_TOKEN WHERE TOKEN = #{TOKEN}
        </select>
    <select id="tokenVerification" parameterType="String">
             SELECT USER_ID
             FROM USERID_TOKEN WHERE TOKEN = #{TOKEN}
        </select>


</mapper>